    <script src="~/lib/ng2/rxjs/Rx.js"></script>    
    <script src="~/lib/ng2/angular2.dev.js"></script>
 

    <script>
         System.config({
            map: {
                app: "/app",
                rxjs: '/lib/ng2/rxjs'
             },
            packages: {        
                'app':  { defaultExtension: 'js'},
                'rxjs': { defaultExtension: 'js'}
            }
    
      });
      System.import('app/components/home/contactPage')
            .then(null, console.error.bind(console));
    </script>
}

